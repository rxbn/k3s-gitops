{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "separateMajorMinor": false,
  "assignees": ["rxbn"],
  "timezone": "Europe/Zurich",
  "regexManagers": [
    {
      "fileMatch": [".github\\/workflows\\/sync-cloudflare-nets\\.yaml$"],
      "matchStrings": ["depName=(?<depName>.*)\\s.*\\/(?<currentValue>.*?)\\/"],
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": ["crds\\/(k8up|cloudflare-operator)\\/kustomization\\.yaml$"],
      "matchStrings": [
        "datasource=(?<datasource>.*) depName=(?<depName>.*)\\s.*\\/(?<currentValue>.*?)\\/"
      ]
    },
    {
      "fileMatch": ["crds\\/cert-manager\\/kustomization\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?) chart=(?<depName>.*?)\\s.*\\/(?<currentValue>.*?)\\/"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": ["crds\\/kube-prometheus-stack\\/crds\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*)\\s.*tag: (?<depName>.*)-(?<currentValue>.*)"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": ["crds\\/traefik\\/crds\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*) chart=(?<depName>.*)\\s.*tag: v(?<currentValue>.*)"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "kubernetes": {
    "fileMatch": [
      "(apps|base)\\/(.+\\/)*(deployment|daemonset|statefulset|cronjob)\\.yaml$"
    ]
  },
  "flux": {
    "fileMatch": [
      "((apps|base|infra)\\/(.+\\/)*helmrelease|core\\/helmrepositories\\/.*)\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": ["(apps|base|infra)\\/(.+\\/)*helmrelease\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker", "helm", "github-releases", "github-tags"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "labels": ["renovate/{{datasource}}", "dep/{{updateType}}"],
      "enabled": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "^lscr.io\\/linuxserver\\/(sonarr|radarr|sabnzbd|plex)$"
      ],
      "versioning": "regex:^v?(?<major>\\d{1,3})\\.(?<minor>\\d+)\\.(?<patch>\\d+)(.*-ls)?(?<build>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^lscr.io\\/linuxserver\\/ombi$"],
      "versioning": "regex:^v?(?<major>\\d{1,3})\\.(?<minor>\\d+)\\.(?<patch>\\d+)(.*-ls)?(?<build>\\d+)?$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["renovate/renovate"],
      "schedule": "after 4am and before 6am"
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
